<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Welcome">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to My Travel Kenya"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who are we? My Travel Kenya is a trusted platform that helps you book flights and apply for visas with ease. We provide a seamless experience for all your travel needs."
        android:textSize="16sp"
        android:gravity="center"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/tvWhyChooseUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Why choose us?\n✅ Easy flight booking\n✅ Fast visa applications\n✅ Reliable customer support"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingBottom="20dp"/>

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:padding="10dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>
